{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "**/templates"
  ],
}
